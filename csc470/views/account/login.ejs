<!doctype html>
<html>
  <head>
    <% include ../partials/navbar %>
  </head>
  <body class="main">
    <br>
      <br>
        <br>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Login</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
    <form action="/login" method="post">
      <div class="row">
	<div class="input-group form-group">
	  <label class="input-group-addon">Email</label>
	  <input aria-describedby="basic-addon2" type="text" class="form-control" name="email">
	</div>
      </div>
      <div class="row">
	<div class="input-group form-group">
	  <label class="input-group-addon">Password</label>
	  <input aria-describedby="basic-addon2" type="password" class="form-control" name="password">
	</div>
      </div>
      <div class="row">
	<button type="submit" class="btn btn-warning btn-lg pull-right">Login</button>
      </div>
    </form>

    <hr>
    <div class="row">
      <p>Need an account? <a href="/signup">Signup</a></p>
      <p>Or go <a href="/">home</a>.</p>
    </div>

</div>

</div>
</body>
</html>
