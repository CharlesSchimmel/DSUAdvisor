<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/navbar %>
</head>
<body>
<div class="main">
<div class="container-fluid" >
<div class="center-block col-md-7">
<h2>Classes Left to Take</h2>
<table class="table table-striped table-condensed table-hover">
	<thead>
		<th>Class ID</th>
		<th>Class Name</th>
		<th>Status</th>
	</thead>
	<% for (var i = 0; i < all_classes.length; i++){ %> <tr>
		<% var course_json = JSON.stringify(all_classes[i]) %>
		<td><%= all_classes[i]._subject %> <%= all_classes[i]._courseNumber %></td>
		<td><%= all_classes[i]._name %></td>
		<td>
			<div class="dropdown">
				<button class="btn btn-secondary btn-sm dropdown-toggle" type=button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopu="true" aria-expanded="false">
					Still Needed
				</button>
				<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
					<h6 class="dropdown-header">Mark as...</h6>
					<li>
						<form method="post" action="/classes/completed" class="inline">
						<button type="submit" name="mark_taken" value="<%= course_json %>" class="btn dropdown-item" >Completed</button>
						</form>
					</li>
					<li>
						<form method="post" action="/classes/take" class="inline">
						<button type="submit" name="mark_taken" value="<%= course_json %>" class="btn dropdown-item" >In Progress</button>
						</form>
					</li>
					<li>
						<form method="post" action="/classes/register" class="inline">
						<button type="submit" name="mark_taken" value="<%= course_json %>" class="btn dropdown-item" >Registered</button>
						</form>
					</li>
					<li>
						<form method="post" action="/classes/waitlist" class="inline">
						<button type="submit" name="mark_taken" value="<%= course_json %>" class="btn dropdown-item" >Waitlisted</button>
						</form>
					</li>
					<li>
						<form method="post" action="/classes/untake" class="inline">
						<button type="submit" name="mark_taken" value="<%= course_json %>" class="btn dropdown-item" >Still Needed</button>
						</form>
					</li>
				</div>
			</div>
		</td>
	</tr><% } %>

</table>
	<% for (var i=0; i < user.classesFinished.length; i++){ %>
	<%= user.classesFinished[i] %>
	<% } %>
</div>
</div>
</div>
</body>
</html>

