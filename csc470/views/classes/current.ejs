<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/navbar %>
</head>
	<body>
		<br>
		<br>
		<div class="main">
			<div class="container-fluid" >
				<div class="center-block col-md-7">
				<h2>Classes Left to Take</h2>
				<table class="table table-striped table-condensed table-hover">
					<thead>
						<th>Class ID</th>
						<th>Class Name</th>
						<th>Status</th>
					</thead>
					<% for (var i = 0; i < all_classes.length; i++){ %> <tr>
						<td><%= all_classes[i]._subject %> <%= all_classes[i]._courseNumber %></td>
						<td><%= all_classes[i]._name %></td>
						<td>
							<div class="dropdown">
								<button class="btn btn-secondary btn-sm dropdown-toggle" type=button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopu="true" aria-expanded="false">
									Still Needed
								</button>
								<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
									<h6 class="dropdown-header">Mark as...</h6>
									<li><a class="btn dropdown-item" href="#">Taken</a></li>
									<li><a class="btn dropdown-item" href="#">Taking</a></li>
									<li><a class="btn dropdown-item" href="#">Registered</a></li>
									<li><a class="btn dropdown-item" href="#">Waitlisted</a></li>
									<li><a class="btn dropdown-item" href="#">Still Needed</a></li>
								</div>
							</div>
						</td>
					</tr><% } %>
				</table>
				</div>
			</div>
		</div>

	</body>
</html>

